extends base

block content
    form.signupForm.metaForm(method="POST",enctype="multipart/form-data")
        div.inputBox
            label
            input(name="avatar",type="file",accept="image/*")
        div.inputBox
            label
            input(name="userId",type="text",placeholder="아이디")
        div.inputBox
            label
            input(name="password",type="password",placeholder="비밀번호")
        div.inputBox
            label
            input(name="name",type="text",placeholder="이름")
        div.inputBox
            label
            input(name="age",type="date",placeholder="생년월일",min="1950-01-01")
        div.inputBox
            label
            input(name="sex",type="text",placeholder="성별")
        div.inputBox
            label
            input(name="email",type="email",placeholder="이메일")
        div.inputBox
            label
            input(name="phoneNumber",type="text",placeholder="폰번호")
        div.inputBox
            label
            input(name="address",type="text",placeholder="주소")
        div.inputBox
            label
            input(type="submit",value="Signup")
