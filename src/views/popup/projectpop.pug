extends ../base

block content
    div.project__box 
        if(project.videofileUrl)

            div.videoContainer
                video#projectVideo(src=`/${project.videofileUrl}`) 
                div.videoController
                    input#videoPlayTimeBar(type="range",name="timebar",min="0",step="1",value="0")
                    p
                        span#currentPlayTime.videoPlayTime 00 : 00
                        span /
                        span#totalPlayTime.videoPlayTime 00 : 00
                        
                    span#videoPlay.videoPlayBtn
                        i.fas.fa-play
                    
                    span#mute
                        i.fas.fa-volume-off
                    input#videoVolume(type="range",name="volume",min="0",max="1",step="0.1")        
        
        div.project__info
            span.projectTitle=project.title
            span.headCount=project.headCount
            span.startDate=project.startDate
            span.endDate=project.endDate
            span.description=project.description
            
block scripts
    script(src="/assets/js/video.js")