
extends base
include mixins/career
include mixins/projectcapsule

block content
    div.resumeContainer
        if(loggedIn)    
            
            div.profile.infoBox
                button#profilePopBtn(data-url='get') 프로필수정
                ul
                    li.name
                        span.kind 이름
                        span #{user.name}
                    li.age
                        span.kind 나이 
                        span #{user.age}
                    li.sex
                        span.kind 성별
                        span #{user.sex}
                    li.email
                        span.kind 
                            i.fas.fa-envelope
                        span #{user.email}   
                    li.phone
                        span.kind
                            i.fas.fa-phone
                        span #{user.phoneNumber}
                    li.address
                        span.kind 
                            i.fas.fa-location-dot
                        span #{user.address}
                div.profileImage
                    img(src=`${user.avatarUrl}`, alt="이미지없음")
            
            div.career.infobox
                
                div
                    button#careerPopBtn(data-url=`postcareer`) 클릭
                    ul#career__ul
                        each career in user.careers
                            +career(career,true)
                        else
                            span.empty__message No Career Found
                                

            
            div.project.infobox
                div
                    button#projectPopBtn(data-url=`postproject`) 클릭
                    
                    ul#project__ul
                        each project in user.projects
                            +projectcapsule(project,true)
                        else
                            span.empty__message No Proejct Found
        

block scripts 
    script(src="/assets/js/popup.js")
    script(src="/assets/js/fetchData.js")
    
        





